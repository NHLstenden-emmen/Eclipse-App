<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="INF1D.eclipse">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/Theme.Eclipse"
            android:usesCleartextTraffic="true"
            tools:ignore="AllowBackup">

        <activity
                android:screenOrientation="portrait"
                android:name=".settings.widgethandler.widget.widgetSettingsActivity"
                android:label="@string/title_activity_widget_settings">
        </activity>
        <activity
                android:screenOrientation="portrait"
                android:name=".SplashScreen"
                android:theme="@style/LaunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait" />
        <activity android:name=".settings.MirrorSettingsActivity" android:screenOrientation="portrait" />
        <activity android:name=".settings.widgethandler.WidgetHandlerActivity" android:screenOrientation="portrait" />
        <activity android:name=".setup.SetupActivity" android:theme="@style/Theme.Eclipse.NoActionBar" android:windowSoftInputMode="adjustNothing" android:screenOrientation="portrait"/>
        <activity android:name=".UserSettings" android:screenOrientation="portrait" />
        <activity android:name=".settings.ColorWheel" android:screenOrientation="portrait"/>
    </application>

</manifest>
